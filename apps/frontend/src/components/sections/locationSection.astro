          {
            hours.map((h) => (
              <>
                <div class="hours-day">{h.day}:</div>
                <div class="hours-time">{h.time}</div>
              </>
            ))
          }
        </div>
      </div>
    </div>

    <div class="location-map reveal-effect">
      <img src={mapImage} alt={mapAlt} width="600" height="500" />
    </div>
  </div>
</section>

<style>
  #location {
