--- 
import '../styles/global.css'
import '../styles/main.css'
import MainHeader from '../components/headers/mainHeader.vue';
import Animations from '../components/animations/Animations.astro';
const menuItems = [
  { label: 'Início', url: '#home' },
  { label: 'Sobre Nós', url: '#about' },
  { label: 'Serviços', url: '#services' },
  { label: 'Galeria', url: '#gallery' },
  { label: 'Localização', url: '#location' },
  { label: 'Contato', url: '#contact' }
];
---
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lumino Clínica - Odontologia de Luxo</title>
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2.12.0/tsparticles.bundle.min.js" is:inline></script>
</head>
<body>
  <!-- Hydrate assim que o JS carregar -->
  <MainHeader 
    client:load
    logoText="Lumino" 
    logoAccent="Clínica"
    ctaText="Agendar Consulta"
    :menuItems={menuItems}
  />
  <slot />
  <Animations />
</body>
</html>  