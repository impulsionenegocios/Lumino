---
// pages/contato.astro - Página de Contato Institucional

import { Image } from 'astro:assets';
import MainLayout from '../layouts/mainLayout.astro';
import Heading from '../components/typograph/Heading.astro';
import Paragraph from '../components/typograph/Paragraph.astro';
import Button from '../components/buttons/mainButton.astro';
import DotsShape from '../components/shapes/dotsShape.astro';
import MdiIcon from '../components/utils/MdiIcon.astro';

// Dados da página
const pageData = {
  // SEO
  metaTitle: 'Contato | Lúmino Clínica Integrada - Anápolis GO',
  metaDescription:
    'Entre em contato com a Lúmino Clínica. Atendimento personalizado em Anápolis. WhatsApp, telefone, formulário online. Agende sua consulta.',

  // Hero
  hero: {
    titulo: 'Entre em contato',
    subtitulo: 'FALE CONOSCO',
    descricao:
      'Estamos prontos para atender você com todo carinho e profissionalismo. Escolha o canal de sua preferência e agende sua consulta.',
    heroImage: '/images/contato-hero.jpg',
  },

  // Informações de contato
  contato: {
    whatsapp: '62 98326-5797',
    whatsappLink: '5562983265797',
    telefone: '62 3321-1234',
    email: 'contato@luminoclinica.com.br',
    endereco: {
      rua: 'Av. Brasil Sul, 845',
      bairro: 'Jundiaí',
      cidade: 'Anápolis - GO',
      cep: '75113-570',
    },

    googleMapsLink:
      'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2901.7214473232084!2d-48.95167139895283!3d-16.330912023569!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x935ea50d24a5cd03%3A0x92225bc9fa3e86e4!2sLumino%20-%20Cl%C3%ADnica%20Integrada%20%7C%20Dentista%20%7C%20Implante%20Dent%C3%A1rio%20%7C%20Aparelho%20Invis%C3%ADvel%20%7C%20An%C3%A1polis%20-%20GO!5e0!3m2!1sen!2sbr!4v1748830306338!5m2!1sen!2sbr',
    instagramLink: 'https://instagram.com/luminoclinica',
    facebookLink: 'https://facebook.com/luminoclinica',
  },

  // Horários
  horarios: [
    { dia: 'Segunda a Sexta', horario: '08:00 às 18:00' },
    { dia: 'Sábado', horario: '08:00 às 12:00' },
    { dia: 'Domingo', horario: 'Fechado' },
  ],

  // FAQ Contato
  faqContato: [
    {
      pergunta: 'Vocês atendem por convênio?',
      resposta:
        'Sim! Atendemos diversos convênios odontológicos. Entre em contato para verificar se atendemos o seu plano específico.',
    },
    {
      pergunta: 'Preciso agendar consulta com antecedência?',
      resposta:
        'Recomendamos o agendamento com antecedência para garantir o melhor horário para você. Em casos de urgência, entre em contato que faremos o possível para atendê-lo.',
    },
    {
      pergunta: 'Vocês têm estacionamento?',
      resposta:
        'Sim, oferecemos estacionamento gratuito para nossos pacientes com segurança e comodidade.',
    },
    {
      pergunta: 'Atendem crianças?',
      resposta:
        'Sim! Temos especialistas em odontopediatria e um ambiente preparado para receber os pequenos com todo carinho.',
    },
  ],
};

// Imports de imagens mock
import heroImage from '../assets/images/bg.jpg';
const whatsappMessage = encodeURIComponent(`Olá! Vim pelo site e gostaria de mais informações.`);
const whatsappLink = `https://wa.me/${pageData.contato.whatsappLink}?text=${whatsappMessage}`;
---

<MainLayout title={pageData.metaTitle} description={pageData.metaDescription}>
  <!-- Hero Section -->
  <section class="h-[70vh] bg-white flex items-center overflow-hidden relative mt-28">
    <div class="hero-bg">
      <Image
        src={heroImage}
        alt="Contato Lúmino Clínica"
        class="hero-bg-image"
        layout="full-width"
        loading="eager"
        width={1920}
        height={1080}
      />
    </div>
    <div class="counter-particles"></div>

    <div class="mx-auto max-w-[1600px] lg:pl-40 w-full z-10">
      <div class="lg:w-[50%] px-8 lg:px-0 z-3">
        <span
          class="text-primary-gold font-bold animate-subtitle font-serif text-sm tracking-wider"
        >
          {pageData.hero.subtitulo}
        </span>
        <h1
          class="text-5xl md:text-6xl 2xl:text-7xl font-bold font-cormorant animate-title mt-4 leading-tight"
        >
          {pageData.hero.titulo}
          <span class="text-primary-gold">conosco</span>
        </h1>
        <p class="text-lg text-gray-600 animate-description mt-6 leading-relaxed">
          {pageData.hero.descricao}
        </p>
      </div>
      <DotsShape />
    </div>
  </section>

  <!-- Seção de Contatos Rápidos -->
  <section class="section bg-primary-dark text-white" id="fast-contact">
    <div class="shape shape-3"></div>
    <div class="container">
      <div class="grid md:grid-cols-3 gap-8">
        <a href={whatsappLink} target="_blank" class="group cursor-pointer">
          <div
            class="text-center reveal-effect transform transition-all duration-500 group-hover:-translate-y-3"
          >
            <div
              class="w-24 h-24 mx-auto mb-6 bg-white/10 rounded-full flex items-center justify-center text-4xl group-hover:bg-primary-gold transition-all duration-500"
            >
              <MdiIcon name="mdi:whatsapp" size={32} className="mx-auto" />
            </div>
            <h3 class="text-2xl font-bold mb-2 text-primary-gold">WhatsApp</h3>
            <p class="text-xl text-white/90">{pageData.contato.whatsapp}</p>
            <p class="text-sm text-white/70 mt-2">Resposta rápida</p>
          </div>
        </a>

        <a
          href={`tel:${pageData.contato.telefone.replace(/\s/g, '')}`}
          class="group cursor-pointer"
        >
          <div
            class="text-center reveal-effect transform transition-all duration-500 group-hover:-translate-y-3"
          >
            <div
              class="w-24 h-24 mx-auto mb-6 bg-white/10 rounded-full flex items-center justify-center text-4xl group-hover:bg-primary-gold transition-all duration-500"
            >
              <MdiIcon name="mdi:phone-outline" size={32} className="mx-auto" />
            </div>
            <h3 class="text-2xl font-bold mb-2 text-primary-gold">Telefone</h3>
            <p class="text-xl text-white/90">{pageData.contato.telefone}</p>
            <p class="text-sm text-white/70 mt-2">Atendimento comercial</p>
          </div>
        </a>

        <a href={`mailto:${pageData.contato.email}`} class="group cursor-pointer">
          <div
            class="text-center reveal-effect transform transition-all duration-500 group-hover:-translate-y-3"
          >
            <div
              class="w-24 h-24 mx-auto mb-6 bg-white/10 rounded-full flex items-center justify-center text-4xl group-hover:bg-primary-gold transition-all duration-500"
            >
              <MdiIcon name="mdi:email-outline" size={32} className="mx-auto" />
            </div>
            <h3 class="text-2xl font-bold mb-2 text-primary-gold">E-mail</h3>
            <p class="text-lg text-white/90">{pageData.contato.email}</p>
            <p class="text-sm text-white/70 mt-2">Para documentos e orçamentos</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Formulário e Informações -->
  <section class="section bg-white">
    <div class="shape shape-1"></div>
    <div class="container">
      <div>
        <!-- Informações -->
        <div class="reveal-effect">
          <h2 class="section-title mb-8 text-center">
            Informações de <span class="accent">atendimento</span>
          </h2>
          <div class="grid lg:grid-cols-3 gap-4 lg:gap-16">
            <!-- Endereço -->
            <div class="mb-8">
              <div class="flex items-start gap-4 mb-6">
                <div
                  class="w-14 h-14 bg-light-bg rounded-2xl flex items-center justify-center text-2xl flex-shrink-0"
                >
                  <MdiIcon name="mdi:map-marker" size={32} className="mx-auto" />
                </div>
                <div>
                  <h3 class="text-xl font-bold text-primary-dark mb-2">Endereço</h3>
                  <p class="text-gray-600">
                    {pageData.contato.endereco.rua}<br />
                    {pageData.contato.endereco.bairro}<br />
                    {pageData.contato.endereco.cidade}<br />
                    CEP: {pageData.contato.endereco.cep}
                  </p>
                  <a
                    href={pageData.contato.googleMapsLink}
                    target="_blank"
                    class="text-primary-gold hover:text-gold-dark transition-colors mt-2 inline-block"
                  >
                    Ver no Google Maps →
                  </a>
                </div>
              </div>
            </div>

            <!-- Horários -->
            <div class="mb-8">
              <div class="flex items-start gap-4 mb-6">
                <div
                  class="w-14 h-14 bg-light-bg rounded-2xl flex items-center justify-center text-2xl flex-shrink-0"
                >
                  <MdiIcon name="mdi:clock-time-four" size={32} className="mx-auto" />
                </div>
                <div class="w-full">
                  <h3 class="text-xl font-bold text-primary-dark mb-4">Horário de Atendimento</h3>
                  <div class="space-y-3">
                    {
                      pageData.horarios.map((horario) => (
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                          <span class="font-medium text-gray-700">{horario.dia}</span>
                          <span class="text-primary-gold font-medium">{horario.horario}</span>
                        </div>
                      ))
                    }
                  </div>
                </div>
              </div>
            </div>

            <!-- Redes Sociais -->
            <div>
              <div class="flex items-start gap-4">
                <div
                  class="w-14 h-14 bg-light-bg rounded-2xl flex items-center justify-center text-2xl flex-shrink-0"
                >
                  <MdiIcon name="mdi:web-box" size={32} className="mx-auto" />
                </div>
                <div>
                  <h3 class="text-xl font-bold text-primary-dark mb-4">Redes Sociais</h3>
                  <div class="flex gap-4">
                    <a
                      href={pageData.contato.instagramLink}
                      target="_blank"
                      class="w-12 h-12 bg-primary-dark text-white rounded-xl flex items-center justify-center hover:bg-primary-gold transition-all duration-300 transform hover:scale-110"
                    >
                      <MdiIcon name="mdi:instagram" size={32} className="mx-auto" />
                    </a>
                    <a
                      href={pageData.contato.facebookLink}
                      target="_blank"
                      class="w-12 h-12 bg-primary-dark text-white rounded-xl flex items-center justify-center hover:bg-primary-gold transition-all duration-300 transform hover:scale-110"
                    >
                      <MdiIcon name="mdi:facebook" size={32} className="mx-auto" />
                    </a>
                    <a
                      href={whatsappLink}
                      target="_blank"
                      class="w-12 h-12 bg-green-500 text-white rounded-xl flex items-center justify-center hover:bg-green-600 transition-all duration-300 transform hover:scale-110"
                    >
                      <MdiIcon name="mdi:whatsapp" size={32} className="mx-auto" />
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mapa -->
  <section class="h-[500px] relative">
    <iframe
      src={pageData.contato.googleMapsLink}
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="w-full h-full"></iframe>
  </section>

  <!-- FAQ -->
  <section class="section bg-light-bg">
    <div class="shape shape-2"></div>
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="section-title section-title-center">
            Perguntas <span class="accent">frequentes</span>
          </h2>
          <p class="section-subtitle section-subtitle-center">
            Tire suas dúvidas sobre nosso atendimento
          </p>
        </div>

        <div class="space-y-4">
          {
            pageData.faqContato.map((item, index) => (
              <div class="bg-white rounded-2xl overflow-hidden reveal-effect shadow-sm hover:shadow-lg transition-shadow duration-300">
                <button
                  class="w-full text-left p-6 font-bold text-primary-dark hover:bg-light-bg transition-colors duration-300 flex items-center justify-between faq-toggle"
                  data-target={`faq-${index}`}
                >
                  <span class="flex items-center">
                    <span class="mr-4 text-2xl text-primary-gold">❓</span>
                    {item.pergunta}
                  </span>
                  <svg
                    class="w-5 h-5 transition-transform duration-300 faq-icon text-primary-gold"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </button>
                <div
                  id={`faq-${index}`}
                  class="hidden p-6 pt-0 text-gray-700 leading-relaxed faq-content"
                >
                  {item.resposta}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
</MainLayout>

<script>
  // Inicialização
  document.addEventListener('DOMContentLoaded', function () {
    // FAQ Toggle
    const faqToggles = document.querySelectorAll('.faq-toggle');
    faqToggles.forEach((toggle) => {
      toggle.addEventListener('click', function () {
        const targetId = this.getAttribute('data-target');
        const faqContent = document.getElementById(targetId);
        const icon = this.querySelector('.faq-icon');

        if (faqContent.classList.contains('hidden')) {
          // Fecha todos os outros
          document.querySelectorAll('.faq-content').forEach((content) => {
            content.classList.add('hidden');
          });
          document.querySelectorAll('.faq-icon').forEach((faqIcon) => {
            faqIcon.style.transform = 'rotate(0deg)';
          });

          // Abre o atual
          faqContent.classList.remove('hidden');
          icon.style.transform = 'rotate(180deg)';
        } else {
          faqContent.classList.add('hidden');
          icon.style.transform = 'rotate(0deg)';
        }
      });
    });
  });
</script>

<style>
  /* Estilos específicos para a página de contato */
  .contact-info-card {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .contact-info-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* Animação para o botão de envio */
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(201, 168, 116, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(201, 168, 116, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(201, 168, 116, 0);
    }
  }

  button[type='submit']:not(:disabled):hover {
    animation: pulse 2s infinite;
  }

  /* Estilo para o mapa */
  iframe {
    filter: grayscale(20%);
    transition: filter 0.3s ease;
  }

  iframe:hover {
    filter: grayscale(0%);
  }
</style>
